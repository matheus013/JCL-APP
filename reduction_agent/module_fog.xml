<?xml version="1.0" encoding="UTF-8"?>
<project name="module_fog" default="compile.module.fog">
  <dirname property="module.fog.basedir" file="${ant.file.module_fog}"/>
  
  <property name="module.jdk.home.fog" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.fog" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.fog" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.fog" value="-encoding UTF-8 -source 1.8 -target 1.8 ${compiler.args}"/>
  
  <property name="fog.output.dir" value="${module.fog.basedir}/out/production/fog"/>
  <property name="fog.testoutput.dir" value="${module.fog.basedir}/out/test/fog"/>
  
  <path id="fog.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="fog.module.production.classpath">
    <path refid="${module.jdk.classpath.fog}"/>
    <path refid="library.jcluser.classpath"/>
    <path refid="library.lib.classpath"/>
  </path>
  
  <path id="fog.runtime.production.module.classpath">
    <pathelement location="${fog.output.dir}"/>
    <path refid="library.jcluser.classpath"/>
    <path refid="library.lib.classpath"/>
  </path>
  
  <path id="fog.module.classpath">
    <path refid="${module.jdk.classpath.fog}"/>
    <pathelement location="${fog.output.dir}"/>
    <path refid="library.jcluser.classpath"/>
    <path refid="library.lib.classpath"/>
  </path>
  
  <path id="fog.runtime.module.classpath">
    <pathelement location="${fog.testoutput.dir}"/>
    <pathelement location="${fog.output.dir}"/>
    <path refid="library.jcluser.classpath"/>
    <path refid="library.lib.classpath"/>
  </path>
  
  
  <patternset id="excluded.from.module.fog">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.fog">
    <patternset refid="excluded.from.module.fog"/>
  </patternset>
  
  <path id="fog.module.sourcepath">
    <dirset dir="${module.fog.basedir}">
      <include name="src"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.fog" depends="compile.module.fog.production,compile.module.fog.tests" description="Compile module fog"/>
  
  <target name="compile.module.fog.production" depends="register.custom.compilers" description="Compile module fog; production classes">
    <mkdir dir="${fog.output.dir}"/>
    <javac2 destdir="${fog.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.fog}/javac">
      <compilerarg line="${compiler.args.fog}"/>
      <bootclasspath refid="fog.module.bootclasspath"/>
      <classpath refid="fog.module.production.classpath"/>
      <src refid="fog.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.fog"/>
    </javac2>
    
    <copy todir="${fog.output.dir}">
      <fileset dir="${module.fog.basedir}/src">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.fog.tests" depends="register.custom.compilers,compile.module.fog.production" description="compile module fog; test classes" unless="skip.tests"/>
  
  <target name="clean.module.fog" description="cleanup module">
    <delete dir="${fog.output.dir}"/>
    <delete dir="${fog.testoutput.dir}"/>
  </target>
</project>